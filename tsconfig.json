{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "module": "Node18",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["lib/**/*", ".snippets/**/*", "scripts/**/*"],
  "exclude": ["build", "node_modules", "dist", "examples"]
}
